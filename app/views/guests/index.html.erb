<h1 class="text-4xl font-bold mb-8 text-center text-black">Guest Book</h1>

<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden mb-8">
  <%= form_for Guest.new, url: guests_path, html: { class: "p-6" } do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :message, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :message, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Sign Guestbook", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>

<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% @guests.each do |guest| %>
    <div class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform duration-300 hover:scale-105 border border-gray-300">
      <div class="p-6">
        <p class="text-sm text-gray-700 mb-2 font-medium"><%= guest.date.strftime("%B %d, %Y") %></p>
        <h2 class="text-2xl font-bold text-black mb-3"><%= guest.name %></h2>
        <p class="text-lg text-gray-800"><%= guest.message %></p>
      </div>
    </div>
  <% end %>
</div>

<% if @guests.empty? %>
  <p class="text-center text-gray-700 mt-8 font-semibold">No guests have signed the book yet. Be the first!</p>
<% end %>